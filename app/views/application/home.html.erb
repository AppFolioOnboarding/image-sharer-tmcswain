<h1>Welcome!</h1>
<p>Click the link below to save a link to an image.</p>
<%= link_to 'New Image', new_image_path %>
</br></br>
<h3>Tags</h3>
<% Image.tag_counts.each do |tag| %>
    <%= link_to tag, root_path(tag: tag.name), class: 'js-tag-filter' %>
<% end %>
</br>
<h3><%= @title %></h3>
<div class="images">
  <% @images.each do |img| %>
      <div class="image">
        <%= image_tag img.url, width: '400' %>
        <ul>
          <% img.tag_list.each do |tag| %>
            <li>
              <%= link_to tag, root_path(tag: tag) %>
            </li>
          <% end %>
        </ul>
        <%= link_to 'Delete', image_path(img), method: :delete, data: { confirm: 'Are you sure you want to delete this image?' } %>
      </div>
  <% end %>
</div>
